#: import MDCard kivymd.uix.card

<OKompanii>
    name: "company_1"
    MDFloatLayout:
        md_bg_color: '#333333'
        Image:
            source: 'assets/o_kompanii.jpg'

            pos_hint: {"center_x": .5, "center_y": .5}
            allow_stretch: True
            keep_ratio: True

        MDGridLayout:
            cols:1
            spacing:dp(30)
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint_x: .8

            ElementCard:
                size_hint_y: 1.5
                size_hint_x: .1

            ElementCard:
                size_hint_y: .4
                on_release:
                    root.manager.push('company_menu')
            ElementCard:
                size_hint_y: .8
                on_release: root.manager.push("poisk", 'up')

        MDGridLayout:
            cols:1
            spacing:dp(0)
            size_hint_y: .05
            pos_hint: {"top": 1}
            ElementCard:
                size_hint_x: .1
                on_release:
                    root.manager.push('main_screen', 'right')