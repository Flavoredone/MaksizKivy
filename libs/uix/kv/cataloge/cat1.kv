<Cat1>
    name: "cat1"
    md_bg_color: '#333333'

    MDGridLayout:
        cols:1
        spacing:dp(10)
        md_bg_color: '#333333'

        Image:
            source: 'assets/cataloge/top1.jpg'
            pos_hint: {"center_x": .5, "center_y": .5}
            allow_stretch: True
            keep_ratio: True
            size_hint_y: .15

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDGridLayout:
                cols: 1
#                size_hint: 1, 5.76 * .88
                size_hint: 1, 7030/1014 * 0.5
                spacing: '0dp'
                Image:
                    source: "assets/cataloge/1_1.jpg"
                    keep_ratio: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    #5.76
                    size_hint: 1, 2830/1014
                Image:
                    source: "assets/cataloge/1_2.jpg"
                    keep_ratio: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    #5.76
                    size_hint: 1, 1701/1014
                Image:
                    source: "assets/cataloge/1_3.jpg"
                    keep_ratio: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    #5.76
                    size_hint: 1, 2499/1014
        BNav:
            size_hint_y: .08

    MDGridLayout:
        cols: 2
        size_hint_y: .13
        pos_hint: {'top': 1}
        spacing: dp(160)
        MDCard:
            opacity: .0
            size_hint_y: .2
            on_press:
                root.manager.push('comb_menu', 'right')

        MDCard:
            opacity: .0
            on_press:
                root.manager.push('cat2')

    GridLayout:
        cols: 5
        size_hint_y: .07
        spacing: dp(5)
        pos_hint: {"center_x": .5, "center_y": .05}
        MDCard:
            opacity: 0.0
            on_release:
                root.manager.push("company_menu")
        MDCard:
            opacity: 0.0
            on_release: root.manager.push("search1")
        MDCard:
            opacity: 0.0
            on_release: root.manager.push("certif_menu")
        MDCard:
            opacity: 0.0
            on_release: root.manager.push("cat_menu")
        MDCard:
            opacity: 0.0
            on_release: root.manager.push("where")
