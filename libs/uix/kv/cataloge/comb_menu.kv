<CombMenu>
    MDFloatLayout:
        md_bg_color: '#333333'
        FloatLayout:
            Image:
                source: 'assets/cataloge/comb_menu.jpg'

                pos_hint: {"center_x": .5, "center_y": .5}
                allow_stretch: True
                keep_ratio: True
            BNav:

        MDGridLayout:
            cols: 2
            size_hint_y: .07
            pos_hint: {'top': 1}
            spacing: dp(160)
            MDCard:
                opacity: .0
                size_hint_y: .2
                on_press:
                    root.manager.push('cat_menu', 'right')

            MDCard:
                opacity: .01

        MDGridLayout:
            cols: 1
            pos_hint: {'top': .91, 'center_x': .5}
            spacing: dp(5)
            size_hint_x: .65
            size_hint_y: .48

            MDCard:
                opacity: .0
    #            size_hint_y: .75
                on_release:
                    root.manager.push('cat1')

            MDCard:
                opacity: .0
    #            size_hint_y: .7
                on_release:
                    root.manager.push('cat2')

            MDCard:
                opacity: .0
                on_release:
                    root.manager.push('cat3')

            MDCard:
                opacity: .0
                on_release:
                    root.manager.push('cat4')

            MDCard:
                opacity: .0
                on_release:
                    root.manager.push('cat7')

            MDCard:
                opacity: .0
                on_release:
                    root.manager.push('cat5')

            MDCard:
                opacity: .0
                on_release:
                    root.manager.push('cat6')

    GridLayout:
        cols: 5
        size_hint_y: .07
        spacing: dp(5)
        pos_hint: {"center_x": .5, "center_y": .05}
        MDCard:
            opacity: 0.0
            on_release:
                root.manager.push("company_menu")
        MDCard:
            opacity: 0.0
            on_release: root.manager.push("search1")
        MDCard:
            opacity: 0.0
            on_release: root.manager.push("certif_menu")
        MDCard:
            opacity: 0.0
            on_release: root.manager.push("cat_menu")
        MDCard:
            opacity: 0.0
            on_release: root.manager.push("where")