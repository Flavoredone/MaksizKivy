<Result>
    on_pre_enter: app.upload_img()
    target: grid_img
    name: 'search_result'
    md_bg_color: '#333333'
    MDGridLayout:
        cols: 1
        MDCard:
            md_bg_color: '#333333'
            size_hint_y: .162
            Image:
                source: 'assets/search/top1.jpg'
                pos_hint: {"top": 1}
                allow_stretch: True
                keep_ratio: False

        MDGridLayout:
            cols: 1
            pos_hint: {"center_x": .5, "center_y": .5}
            md_bg_color: '#333333'
            ScrollView:
                scroll_distance: 5
                scroll_timeout: 2000
                do_scroll_y: True
                do_scroll_x: True
                size: self.size
                ResGrid:
                    id: grid_img
                    cols: 1

    BNav:

###################################################################

    MDGridLayout:
        cols: 2
        size_hint_y: .13
        pos_hint: {'top': 1}
        spacing: dp(160)
        MDCard:
            opacity: .01
            size_hint_y: .2
            on_release: root.manager.push('search1', 'right')

        MDCard:
            opacity: .01
            on_release: root.manager.push('main_screen', 'right')

    GridLayout:
        cols: 5
        size_hint_y: .07
        spacing: dp(5)
        pos_hint: {"center_x": .5, "center_y": .05}
        MDCard:
            opacity: 0.0
            on_release:
                root.manager.push("company_menu")
        MDCard:
            opacity: 0.0
            on_release: root.manager.push("search1")
        MDCard:
            opacity: 0.0
            on_release: root.manager.push("certif_menu")
        MDCard:
            opacity: 0.0
            on_release: root.manager.push("cat_menu")
        MDCard:
            opacity: 0.0
            on_release: root.manager.push("where")

<ResGrid>