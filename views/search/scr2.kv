
MDScreen:
    id: search2
    name: 'search2'
    md_bg_color: '#FFFFFF'
    MDGridLayout:
        cols: 1
        MDCard:
            md_bg_color: '#FFFFFF'
            size_hint_y: .162
#                on_release: root.manager.current = 'MainScreen'
            Image:
                source: 'assets/search/top2.jpg'
                pos_hint: {"top": 1}
                allow_stretch: True
                keep_ratio: True

        MDGridLayout:
            cols: 1
            pos_hint: {"center_x": .5, "center_y": .5}
            md_bg_color: '#FFFFFF'
            spacing: dp(5)
            Image:
                source: 'assets/search/layer2.jpg'
                pos_hint: {"center_x": .5, "center_y": .53}
                allow_stretch: True
                keep_ratio: True


        Image:
            source: 'assets/search/btm1.jpg'
            size_hint_y: .13
            pos_hint: {"center_x": .5, "bottom": 1}
            allow_stretch: True
            keep_ratio: True

    MainView:
        #cas number
        list: 'cas'
        ComboEdit:
#################################################################

    MDGridLayout:
        cols: 2
        size_hint_y: .13
        pos_hint: {'top': 1}
        spacing: dp(160)
        MDCard:
            opacity: .0
            size_hint_y: .2
            on_release: root.manager.current = 'search1'

        MDCard:
            opacity: .0
            on_release: root.manager.current = 'MainScreen'

    MDGridLayout:
        cols: 2
        size_hint_y: .05
        size_hint_x: .9
        pos_hint: {"center_x": .5, "center_y": .4}
        spacing: dp(25)
        MDCard:
            opacity: 0
            size_hint_y: .2
            on_release:
                app.count_result()
                root.manager.current = 'search_result'
        MDCard:
            opacity: .0
            size_hint_y: .2
            on_release: root.manager.current = 'search3'


<MainView>
    ComboEdit:
        size_hint: .8, None
        pos_hint: {'center':(.5, .5)}
        on_text: root.on_text(self, args[1])
        # mode: "rectangle"
        max_text_length: 40
        font_size: '16sp'
        line_color_normal: "black"
        line_color_focus: "black"
        helper_text_color_normal: "black"
        helper_text_color_focus: "black"
        hint_text_color_normal: "black"
        hint_text_color_focus: "black"
        text_color_normal: "black"
        text_color_focus: "black"