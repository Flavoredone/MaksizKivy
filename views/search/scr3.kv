MDScreen:
    name: 'search3'
    md_bg_color: '#FFFFFF'
    MDGridLayout:
        cols: 1
        MDCard:
            md_bg_color: '#FFFFFF'
            size_hint_y: .162
#                on_release: root.manager.current = 'MainScreen'
            Image:
                source: 'assets/search/top2.jpg'
                pos_hint: {"top": 1}
                allow_stretch: True
                keep_ratio: True

        MDGridLayout:
            cols: 1
            pos_hint: {"center_x": .5, "center_y": .5}
            md_bg_color: '#FFFFFF'
            spacing: dp(5)
            Image:
                source: 'assets/search/layer3.jpg'
                pos_hint: {"center_x": .5, "center_y": .53}
                allow_stretch: True
                keep_ratio: True


        Image:
            source: 'assets/search/btm1.jpg'
            size_hint_y: .13
            pos_hint: {"center_x": .5, "bottom": 1}
            allow_stretch: True
            keep_ratio: True

    MainView:
        # substance
#        list: ['1,1,2-Trichloroethane', 'Dichlorobenzene', '1,2-Dichlorethan (Ethylendichlorid)', '1,2-Propanediol (propylene glycol)', '1,3-Butadien']
        list: 'substance'
#################################################################

    MDGridLayout:
        cols: 2
        size_hint_y: .13
        pos_hint: {'top': 1}
        spacing: dp(160)
        MDCard:
            opacity: .0
            size_hint_y: .2
            on_release: root.manager.current = 'search2'

        MDCard:
            opacity: .0
            on_release: root.manager.current = 'MainScreen'

    MDGridLayout:
        cols: 2
        size_hint_y: .05
        size_hint_x: .9
        pos_hint: {"center_x": .5, "center_y": .4}
        spacing: dp(15)
        MDCard:
            opacity: .0
            size_hint_y: .2
            on_release:
                app.count_result()
                root.manager.current = 'search_result'
        MDCard:
            opacity: .0
            size_hint_y: .2
            on_release: root.manager.current = 'search4'