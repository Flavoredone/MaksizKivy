MDScreen:
    name: "gloves2"
    md_bg_color: '#000000'

    MDGridLayout:
        cols:1
        spacing:dp(10)

        Image:
            source: 'assets/cataloge/other/gloves2.jpg'
            size_hint_y: 0.68
            pos_hint: {"center_x": .5, "center_y": .5}
            allow_stretch: True
            keep_ratio: True

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDGridLayout:
                cols:1
                size_hint: 1, 5.35 * .68
                Image:
                    source: "assets/cataloge/other/gl2_1.jpg"
                    keep_ratio: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    #5.35
                    size_hint: 1, 3.14
                Image:
                    source: "assets/cataloge/other/gl2_2.jpg"
                    keep_ratio: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    #5.35
                    size_hint: 1, 2.42

    MDGridLayout:
        cols: 2
        size_hint_y: .13
        pos_hint: {'top': 1}
        spacing: dp(160)
        MDCard:
            opacity: .01
            size_hint_y: .2
            on_press:
                root.manager.current = 'cat_menu'

        MDCard:
            opacity: .01
            on_press:
                root.manager.current = 'MainScreen'

    MDGridLayout:
        cols: 3
        size_hint_y: .3
        pos_hint: {'top': .86}
        spacing: dp(50)
        MDCard:
            opacity: .01
            size_hint_y: .2
            on_release:
                root.manager.current = 'gloves1'


        MDCard:
            opacity: .01

        MDCard:
            opacity: .01
            on_release:
                root.manager.current = 'gloves3'