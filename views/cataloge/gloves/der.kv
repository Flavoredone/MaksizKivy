MDScreen:
    name: "der"
    md_bg_color: '#000000'

    MDGridLayout:
        cols:1
        spacing:dp(10)

        Image:
            source: 'assets/cataloge/other/der.jpg'
            size_hint_y: .086
            pos_hint: {"center_x": .5, "center_y": .5}
            allow_stretch: True
            keep_ratio: True

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            Image:
                source: "assets/cataloge/other/der1.jpg"
                keep_ratio: True
                pos_hint: {"center_x": .5, "center_y": .5}
                #4.12
                size_hint: 1, 2.1


    MDGridLayout:
        cols: 3
        size_hint_y: .079
        pos_hint: {'top': 1}
        spacing: dp(50)
        MDCard:
            opacity: .01
            size_hint_y: .2
            on_release:
                root.manager.current = 'cat_menu'

        MDCard:
            opacity: .01

        MDCard:
            opacity: .01
            on_release:
                root.manager.current = 'MainScreen'