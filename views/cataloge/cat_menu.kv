MDScreen:
    name: "cat_menu"
    md_bg_color: app.theme_cls.bg_darkest

    Image:
        source: 'assets/cataloge/cat_menu.jpg'

        pos_hint: {"center_x": .5, "center_y": .5}
        allow_stretch: True
        keep_ratio: True

    MDGridLayout:
        cols: 2
        size_hint_y: .13
        pos_hint: {'top': 1}
        spacing: dp(160)
        MDCard:
            opacity: .01
            size_hint_y: .2
            on_press:
                root.manager.current = 'cataloge_3'

        MDCard:
            opacity: .01

    MDGridLayout:
        cols: 1
        pos_hint: {'top': .86, 'center_x': .5}
        spacing: dp(1)
        size_hint_x: .7
        size_hint_y: .8

        MDCard:
            opacity: .01
            size_hint_y: .75
            on_release:
                root.manager.current = 'cat1'


        MDCard:
            opacity: .01
            size_hint_y: .7
            on_release:
                root.manager.current = 'gloves1'

        MDCard:
            opacity: .01
            on_release:
                root.manager.current = 'der'