MDScreen:
    name: 'certif_menu'
    md_bg_color: '#000000'
    MDGridLayout:
        cols: 1
        MDCard:
            size_hint_y: .16
            on_release: root.manager.current = 'MainScreen'
            Image:
                source: 'assets/certif/top.jpg'
                pos_hint: {"top": 1}
                allow_stretch: True
                keep_ratio: True
                radius: (36,36,36,36)

        MDGridLayout:
            cols: 1
            md_bg_color: '#000000'
            spacing: dp(5)

            MDGridLayout:
                size_hint: .95, .2

            MDCarousel:
                direction: 'right'
                size_hint: .8, .5

                MDGridLayout:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size_hint: .95, 1
                    cols: 2
                    rows: 1
                    spacing: dp(18)
                    border: 36,36,36,36

                    MDCard:
                        md_bg_color: '#000000'
                        on_release: app.open_dialog('assets/certif/pdf/3.jpg', 2)
                        border: 36,36,36,36
                        Image:
                            source: 'assets/certif/7.jpg'
                            keep_ratio: False
                            allow_stretch: True
                            radius: (36,36,36,36)

                    MDCard:
                        md_bg_color: '#000000'
                        on_release: app.open_dialog('assets/certif/pdf/2.jpg', 2)
                        Image:
                            source: 'assets/certif/2.jpg'
                            keep_ratio: False
                            allow_stretch: True
                            border: (36,36,36,36)

                MDGridLayout:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size_hint: .95, 1
                    cols: 2
                    rows: 1
                    spacing: dp(17)
                    MDCard:
                        md_bg_color: '#000000'
                        on_release: app.open_dialog('assets/certif/pdf/4.jpg', 2)
                        Image:
                            source: 'assets/certif/3.jpg'
                            keep_ratio: False
                            allow_stretch: True
                            border: (36,36,36,36)
                    MDCard:
                        md_bg_color: '#000000'
                        on_release: app.open_dialog('assets/certif/pdf/5.jpg', 3)
                        Image:
                            source: 'assets/certif/4.jpg'
                            keep_ratio: False
                            allow_stretch: True
                            border: (36,36,36,36)

                MDGridLayout:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size_hint: .95, 1
                    cols: 2
                    rows: 1
                    spacing: dp(17)
                    MDCard:
                        md_bg_color: '#000000'
                        on_release: app.open_dialog('assets/certif/pdf/7.jpg', 2)
                        Image:
                            source: 'assets/certif/5.jpg'
                            keep_ratio: False
                            allow_stretch: True
                            border: (36,36,36,36)
                    MDCard:
                        md_bg_color: '#000000'
                        on_release: app.open_dialog('assets/certif/pdf/8.jpg', 2)
                        Image:
                            source: 'assets/certif/6.jpg'
                            keep_ratio: False
                            allow_stretch: True
                            border: (36,36,36,36)

                MDGridLayout:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size_hint: .95, 1
                    cols: 1
                    spacing: dp(17)
                    MDCard:
                        md_bg_color: '#000000'
                        on_release: app.open_dialog('assets/certif/pdf/1_0.jpg', 1)
                        Image:
                            source: 'assets/certif/1.jpg'
                            keep_ratio: True
                            allow_stretch: False
                            border: (36,36,36,36)

            MDGridLayout:
                size_hint: .95, .15

            MDGridLayout:
