                        source: 'assets/certif/decl2.jpg'
                        keep_ratio: False
                        allow_stretch: True
                        border: (36,36,36,36)

            MDGridLayout:
                size_hint: .95, .05


        Image:
            source: 'assets/certif/btm.jpg'
            size_hint_y: .15
            pos_hint: {"center_x": .5, "bottom": 1}
            allow_stretch: True
            keep_ratio: True
